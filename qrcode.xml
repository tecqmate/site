<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="page.xsl"?>
<html>
  <head>
	  <short value="Tecq Mate Free Services"/>
	  <long value="Free Tiny URL Services from Tecq Mate. Tiny URL powered by tinyurl.com"/>
	  <datetime value="2012-01-23T06:17:17"/>
  </head>
  <body>
        <main>
			<article>
				<header class="mb-4">
					<h1 class="fw-bolder mb-1">QR Code</h1>
					<div class="text-muted fst-italic mb-2">Posted on July 26, 2012 by Tecq Mate</div>
					<span class="badge bg-secondary text-decoration-none link-light">QR Code</span>
				</header>
			</article>
			<section class="mb-3">
				<div class="row">
					<div class="col-sm-10">
						<input placeholder="Type or Paste here ..." id="txt" type="text" class="form-control col-sm-10" autofocus=""/>
					</div>
					<div class="col-sm-2">
						<button class="btn btn-outline-secondary" type="button" id="btn">
							<svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-arrow-right-short" viewBox="0 0 16 16">
							  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"/>
							</svg>
						</button>
					</div>
				</div>
			</section>
			<section class="mb-3 text-center">
				<img id="qrc" alt="QR Code" class="d-none" width="150" />
			</section>
        </main>
		<template>
			<script>
				$(function(){
					$('#btn').on('click',function(e){
						var txt = $.trim($('#txt').val());
						if(!txt){
							$.alert('Input is mandate!');
							return;
						}
						var url = 'https://api.qrserver.com/v1/create-qr-code?';
						url += $.param({'size':'150x150','data':txt});
						$('#qrc').removeClass('d-none').attr('src',url);
					});
				});
			</script>
		</template>
  </body>
</html>
