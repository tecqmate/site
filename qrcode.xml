<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="page.xsl"?>
<html>
  <head>
	  <short value="Tecq Mate Free Services"/>
	  <long value="Free Tiny URL Services from Tecq Mate. Tiny URL powered by tinyurl.com"/>
	  <datetime value="2012-07-26T06:17:17"/>
  </head>
  <body>
        <main>
			<article>
				<header class="mb-4">
					<h1 class="fw-bolder mb-1">QR Code</h1>
					<div class="text-muted fst-italic mb-2">Posted on July 26, 2012 by Tecq Mate</div>
					<span class="badge bg-secondary text-decoration-none link-light">QR Code</span>
				</header>
			</article>
			<section class="mb-3">
				<input placeholder="Type or Paste here ..." id="txt" type="text" class="form-control" autofocus=""/>
			</section>
			<section class="mb-3 text-center">
				<img id="qrc" alt="QR Code" class="d-none" width="150" />
			</section>
        </main>
		<template>
			<script>
				$(function(){
					$('#txt').on('input',function(e){
						var txt = $.trim(this.value) || '#tecqmate';
						var url = 'https://api.qrserver.com/v1/create-qr-code?';
						url += $.param({'size':'150x150','data':txt});
						$('#qrc').removeClass('d-none').attr('src',url);
					});
				});
			</script>
		</template>
  </body>
</html>
